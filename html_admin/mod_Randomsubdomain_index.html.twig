{# modules/Randomsubdomain/html_admin/mod_Randomsubdomain_index.html.twig #}

{% extends 'layout_default.html.twig' %}

{% block content %}
	<h1>Random Subdomain Generator</h1>

	{% if message %}
		<div class="alert alert-info">{{ message }}</div>
	{% endif %}

	<form method="post">
		<div class="form-group">
			<label for="prefix">Subdomain Prefix:</label>
			<input type="text" id="prefix" name="prefix" class="form-control" placeholder="Enter a prefix (optional)">
		</div>

		<button type="submit" class="btn btn-primary mt-2">Generate Random Subdomain</button>
	</form>

	{% if subdomain %}
		<div class="mt-3">
			<strong>Generated Subdomain:</strong> {{ subdomain }}
		</div>
	{% endif %}
{% endblock %}
